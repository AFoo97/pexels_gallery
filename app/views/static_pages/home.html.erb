<h1>Pexels Photo Gallery</h1>

<%= form_with url: root_path, method: :get, local: true do %>
  <div>
    <%= label_tag :collection_id, "Enter Pexels Collection ID:" %>
    <%= text_field_tag :collection_id, params[:collection_id] %>
    <%= submit_tag "View Gallery" %>
  </div>
<% end %>

<% if @photos.present? %>
  <h2>Photos</h2>
  <div style="display: flex; flex-wrap: wrap; gap: 10px;">
    <% @photos.each do |photo| %>
      <div>
        <img src="<%= photo['src']['medium'] %>" alt="<%= photo['alt'] %>">
        <p>By <%= photo['photographer'] %></p>
      </div>
    <% end %>
  </div>
<% end %>

